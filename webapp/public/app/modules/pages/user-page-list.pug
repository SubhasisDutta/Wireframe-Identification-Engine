.container(ng-hide="identity.isAuthenticated()")
    .jumbotron
        h1 Wireframe Analysis Engine
        p Please Log IN to view Wireframe Analysis Engine Reports.
.container.top-padding-med(ng-show="identity.isAuthenticated()")
    .pull-right
        form.form-inline
            .form-group
                input.form-control(ng-model="searchText", placeholder="Filter")
            .form-group.margin-left-med
                select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOptions")
    table.table.table-hover.table-striped.table-condensed
        thead
            tr
                th Wireframe
                th Title
                th Upload Date
                th Width
                th Height
                th No of Controls
                th Acess Type
                th Edit
                th Remove
        tbody
            tr(ng-repeat="data in userWireframes | filter:searchText | orderBy:sortOrder")
                td
                    img.model-image-box(ng-src='/api/page/image/{{data.wireframeImageId}}')
                td
                    a(href='/pagedetail/{{data._id}}') {{data.title}}
                td {{data.uploaded_on | date}}
                td {{data.wireframe_width}} px
                td {{data.wireframe_height}} px
                td {{data.no_of_controls}}
                td {{data.acessType}}
                td
                    button.btn.btn-primary(ng-click="editControl(data._id)") Edit
                td
                    button.btn.btn-primary(ng-click="deleteControl(data._id)") X
